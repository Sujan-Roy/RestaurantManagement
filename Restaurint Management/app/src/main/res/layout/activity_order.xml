<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back9"
    tools:context="com.example.spuzzal.loginreg.OrderActivity">
    <TextView
        android:id="@+id/welText"
        android:text="Food Order List"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<EditText
    android:id="@+id/nameEt"
    android:layout_below="@+id/welText"
    android:hint="Please Enter Your Full Name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/contactEt"
        android:hint="Please Enter Your Contact Number"
        android:layout_below="@+id/nameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="please Enter food Name"
        android:layout_below="@+id/contactEt"
        android:id="@+id/foodEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Quantity"
        android:id="@+id/quantityEt"
        android:layout_below="@+id/foodEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/deskEt"
        android:hint="Desk No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantityEt"/>
    <Button
        android:id="@+id/orderBtn"
        android:layout_below="@+id/deskEt"
        android:text="Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/orderBtn"
        android:text="Logout"
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
